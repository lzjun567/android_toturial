<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:text="@string/hello_world"
        android:id="@+id/txtMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开另外一个activity"
        android:id="@+id/btnAty1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动服务"
        android:id="@+id/btnStartService"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnUnregBroadcast"
        android:layout_toEndOf="@+id/btnUnregBroadcast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止服务"
        android:id="@+id/btnStopService"
        android:layout_toEndOf="@+id/btnAty1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnStartService"
        android:layout_toRightOf="@+id/btnUnregBroadcast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定服务"
        android:id="@+id/btnBindService"
        android:layout_toEndOf="@+id/txtMain"
        android:layout_alignEnd="@+id/btnStopService"
        android:layout_alignRight="@+id/btnStopService"
        android:layout_alignStart="@+id/btnStopService"
        android:layout_alignLeft="@+id/btnStopService"
        android:layout_below="@+id/btnStopService"
        android:layout_toRightOf="@+id/btnUnregBroadcast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解除绑定"
        android:id="@+id/btnUnBindServie"
        android:layout_toEndOf="@+id/txtMain"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/btnBindService"
        android:layout_alignLeft="@+id/btnBindService"
        android:layout_below="@+id/btnBindService"
        android:layout_toRightOf="@+id/btnUnregBroadcast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取服务生成值"
        android:id="@+id/btnService"
        android:layout_above="@+id/btnAty1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnAty1"
        android:layout_alignEnd="@+id/btnAty1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广播接收"
        android:id="@+id/btnBroadcast"
        android:layout_above="@+id/btnService"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnService"
        android:layout_alignEnd="@+id/btnService" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动态注册广播"
        android:id="@+id/btnRegBroadcast"
        android:layout_above="@+id/btnBroadcast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnBroadcast"
        android:layout_alignEnd="@+id/btnBroadcast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动态注销广播"
        android:id="@+id/btnUnregBroadcast"
        android:layout_above="@+id/btnRegBroadcast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnBroadcast"
        android:layout_alignEnd="@+id/btnBroadcast"
        android:layout_below="@+id/btnUnBindServie" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐式Intent"
        android:id="@+id/btnImplicitIntent"
        android:layout_toStartOf="@+id/btnBindService"
        android:layout_toLeftOf="@+id/btnBindService"
        android:layout_above="@+id/btnUnregBroadcast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="列表"
        android:id="@+id/btnListView"
        android:layout_above="@+id/btnUnBindServie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnImplicitIntent"
        android:layout_alignEnd="@+id/btnImplicitIntent" />

</RelativeLayout>
